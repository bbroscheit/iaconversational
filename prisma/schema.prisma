datasource db {
  provider = "postgresql" // o "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id            Int           @id @default(autoincrement())
  name          String
  avatar        String? // URL o path a la imagen
  personality   String[] // array de rasgos
  style         String? // "serio", "humorÃ­stico", etc.
  memory        Json? // para guardar info importante
  messages      Message[]
  memoryEntries MemoryEntry[]
  createdAt     DateTime      @default(now())
}

model Message {
  id          Int       @id @default(autoincrement())
  sender      String
  content     String
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
  createdAt   DateTime  @default(now())
  
}

model MemoryEntry {
  id          Int       @id @default(autoincrement())
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
  content     String
  topic       String? // opcional: podÃ©s agrupar recuerdos por tema
  subject     String  // ðŸ‘ˆ nuevo: "usuario", "personaje", "hermana", etc.
  createdAt   DateTime  @default(now())
}


